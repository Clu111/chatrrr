<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ConnectButton1" Content="Connect" Margin="0,10,559,359" Click="Button_Click" RenderTransformOrigin="0.497,0.513" HorizontalAlignment="Right" Width="224">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.317"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.197"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="IpUser" TextWrapping="Wrap" Text="IP юзера" Margin="254,10,21,353"/>
        <ListBox x:Name="ChatBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,86,21,145" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBox x:Name="MassageBox" HorizontalAlignment="Left" Margin="10,294,0,0" TextWrapping="Wrap" Text="Введите сообщение" VerticalAlignment="Top" Width="769" Height="130" TextChanged="MassageBox_TextChanged"/>

    </Grid>
</Window>
